<script src="https://cdn.tailwindcss.com"></script>
<header class="text-gray-600 body-font sticky-top bg-white">
    <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
      <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
        <img src="/favicon.ico" class="w-10 h-10 text-white p-2 rounded-full">
        <span class="ml-3 text-xl">Campy</span>
      </a>
      <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
        <a class="mr-5 hover:text-gray-900" href="/">Home</a>
        <a class="mr-5 hover:text-gray-900" href="/campgrounds">Explore</a>
        <a class="mr-5 hover:text-gray-900" href="/campgrounds/new">New Camp</a>
          <% if(!currentUser) {%>
          <a class="mr-5 hover:text-gray-900" href="/login">Login</a>
          <a class="mr-5 hover:text-gray-900" href="/register">Register</a>
          <% } else {%>
          <a class="mr-5 hover:text-gray-900" href="/logout">Logout</a>
          <% } %> 
        </nav>
      </p>
      <% if(currentUser){ %>
        <p style="text-align: left;">User<br>
          <%= currentUser.username %>  
          </p>          
    <% } else{ %>  
      <a href="/login"><h1>No user:<br>Login</h1></a>
   <% } %>
    </div>
  </header>

